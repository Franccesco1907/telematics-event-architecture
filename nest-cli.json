{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ingestor/src",
  "monorepo": true,
  "root": "apps/ingestor",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  },
  "projects": {
    "ingestor": {
      "type": "application",
      "root": "apps/ingestor",
      "entryFile": "main",
      "sourceRoot": "apps/ingestor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ingestor/tsconfig.app.json"
      }
    },
    "rules-engine": {
      "type": "application",
      "root": "apps/rules-engine",
      "entryFile": "main",
      "sourceRoot": "apps/rules-engine/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rules-engine/tsconfig.app.json"
      }
    },
    "notifier": {
      "type": "application",
      "root": "apps/notifier",
      "entryFile": "main",
      "sourceRoot": "apps/notifier/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifier/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}